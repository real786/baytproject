    <script>
// Get the start time passed from the server (in seconds)
const startTime = <%= consistentTime %>; // This will be set by the server when rendering the pagen
// Set the initial countdown time (7 days in seconds)
const initialCountdownTime = 7 * 24 * 60 * 60; // 7 days in seconds

// Function to update the timer
function updateTimer() {
    // Get the current time in seconds
    const currentTime = Math.floor(Date.now() / 1000);

    // Calculate the elapsed time since the start
    const elapsedTime = currentTime - startTime;

    // Calculate the remaining time (7 days - elapsed time)
    let remainingTime = initialCountdownTime - elapsedTime;

    if (remainingTime <= 0) {
        // If the time is up, reset the countdown to 7 days and update the start time on the server
        remainingTime = initialCountdownTime;
        // You can update the server start time if needed, but for now it stays the same
        // You may want to make an API call to reset the start time on the server if desired
    }

    // Calculate the days, hours, minutes, and seconds
    let days = Math.floor(remainingTime / (60 * 60 * 24));
    let hours = Math.floor((remainingTime % (60 * 60 * 24)) / (60 * 60));
    let minutes = Math.floor((remainingTime % (60 * 60)) / 60);
    let seconds = remainingTime % 60;

    // Display the timer in the format: Days:Hours:Minutes:Seconds
    document.getElementById('timer').textContent = 
        `${days} : ${hours} : ${minutes} : ${seconds}`;
}

// Call the updateTimer function every second
setInterval(updateTimer, 1000);


    </script>

